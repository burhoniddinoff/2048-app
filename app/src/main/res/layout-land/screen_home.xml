<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/menu"
        android:textColor="@color/btn_color"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_new_game"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/new_game"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_how_to_play"
        app:layout_constraintEnd_toStartOf="@id/btn_keep_going"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMenu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_keep_going"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/keep_going"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_new_game"
        app:layout_constraintTop_toBottomOf="@id/textMenu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_how_to_play"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/how_to_play"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_new_game" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rate"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/btn_color"
        android:fontFamily="@font/oswald_medium"
        android:text="@string/rate"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_how_to_play"
        app:layout_constraintTop_toBottomOf="@+id/btn_keep_going" />


</androidx.constraintlayout.widget.ConstraintLayout>